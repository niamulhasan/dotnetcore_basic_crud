@model List<MVCcrud.Models.Domain.Employee>

@{
    ViewData["Title"] = "All Employees";
}

<h1>Employees List</h1>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Salary</th>
        <th>Date of Birth</th>
        <th>Depertment</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.Id</td>
            <td>@employee.Name</td>
            <td>@employee.Email</td>
            <td>@employee.Salary</td>
            <td>@employee.DateOfBirth.ToString("yy-MM-dd")</td>
            <td>@employee.Department</td>
            <td><a class="btn btn-warning" href="Employees/View/@employee.Id">View</a></td>
        </tr>
    }
    </tbody>
</table>
